  provider = "postgresql"
}

/* header - array of first or second
interface MobileMenuCollapsibleProps {
  collapsible: true;
  title: string;
  links: Link[];
  content: {
    header: string;
    genericLink?: Link;
    description: string;
  };
}
interface MenuNormItemProps {
  collapsible: false;
  links: Link[];
}
 */

model HeaderMenuItem {
  id String @id @default(uuid())

  collapsible Boolean
  order Int @default(0)
  title String? // name of menu item
  content Json? // left part description (header, description, genericLink?)
  imagesHeader String?
  images HeaderImage[]

  // Relation: One Menu Item -> Many Links
  links HeaderLink[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HeaderLink {
  id String @id @default(uuid())
  href String
  title String

  itemId String
  item HeaderMenuItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model HeaderImage {
  id String @id @default(uuid())
  title String
  href String
  imgUrl String
  imgAlt String

  itemId String
  item HeaderMenuItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
}


