/* 
footer
  type FooterList = {
  header: string;
  items: {
    title: string;
    href: string;
  }[];
};
 */
model FooterColumn {
  id String @id @default(uuid())
  header String
  order Int @default(0)

  items FooterLink[]
}

model FooterLink {
  id String @id @default(uuid())
  href String
  title String

  columnId String
  column FooterColumn @relation(fields: [columnId], references: [id], onDelete: Cascade)
}

